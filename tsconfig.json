{
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "node",
    "allowJs": false,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./public/",
    "baseUrl": ".",
    "typeRoots": [
      "src/*",
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "exclude": [
    "node_modules",
    "src/adapters",
    "src/assets",
    "src/components",
    "src/contexts",
    "src/layouts/",
    "public",
    "src/styles"
  ],
  "include": [
    "src"
  ]
}
