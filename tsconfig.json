{
    "compilerOptions": {
        "target": "es2017",
        "moduleResolution": "node",
        "allowJs": false,
        "noEmit": false,
        "strict": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "resolveJsonModule": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "./build",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"],
            "@src/*": ["src/*"],
            "@utils/*": ["src/utils/*"],
            "@config/*": ["config/*"]
        },
        "typeRoots": [
            "src/*", "node_modules/@types"
        ]
    },
    "exclude": [ "node_modules" ]
}